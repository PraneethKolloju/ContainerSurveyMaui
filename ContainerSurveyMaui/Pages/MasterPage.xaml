<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ContainerSurveyMaui.Pages.MasterPage"
                          NavigationPage.HasBackButton="False"
             NavigationPage.HasNavigationBar="False"

             >
    <VerticalStackLayout>
        <Frame BackgroundColor="White" BorderColor="White" HasShadow="False">
            <HorizontalStackLayout BackgroundColor="Transparent" HeightRequest="55" HorizontalOptions="Center" VerticalOptions="Center" >
                <Image Source="vedanta_logo" HeightRequest="85"/>
            </HorizontalStackLayout>
        </Frame>

        <Label 
            Text="Redirecting, Please wait!!!"
            VerticalOptions="CenterAndExpand" 
            HorizontalOptions="CenterAndExpand" Margin="0,15,0,0" />
        <ActivityIndicator IsRunning="True" Margin="0,40,0,0"
                     VerticalOptions="Center"
                     HorizontalOptions="Center"  
                     BackgroundColor="Transparent"
                     Color="#005298"
        />


    </VerticalStackLayout>
</ContentPage>