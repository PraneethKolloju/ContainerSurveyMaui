<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ContainerSurveyMaui.Pages.MapsPage"
             Title="Location Coordinates"
                          NavigationPage.HasBackButton="True"
                          NavigationPage.HasNavigationBar="False"
              
             >
    
    <ScrollView>
        <StackLayout>
           
            <Frame BackgroundColor="White" BorderColor="White" HasShadow="False">
                <HorizontalStackLayout BackgroundColor="Transparent" HeightRequest="55" HorizontalOptions="Center" VerticalOptions="Center" >
                    <Image Source="vedanta_logo" HeightRequest="85"/>
                </HorizontalStackLayout>
            </Frame>
            <Frame HeightRequest="500" Margin="10,20,10,0" BackgroundColor="White">
            <WebView Source="MapLeaf.html" x:Name="LocationWebview"/>
        </Frame>

        </StackLayout>
    </ScrollView>
</ContentPage>